<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<insert id="insert" parameterType="uservo">
	<![CDATA[
	insert into user(name,email,password,gender,join_date) value(#{name },#{email },#{password },#{gender },now())
	]]>
	<selectKey keyProperty="no" resultType="long">
	<![CDATA[
	select last_insert_id()
	]]>
	
	</selectKey>
	</insert>
	
	<select id="getByEmailAndPassword" parameterType='com.cafe24.mysite.repository.vo.UserVo' resultType='uservo' >
	<![CDATA[
	select name,email,password from user where no=#{no }
	]]>
	</select>
	
	<update id="update" parameterType="uservo">
		<![CDATA[
			update user set name=#{name },
			]]>
			<if test="password !=''">
			<![CDATA[
				password=#{password },
				]]>
			</if>
		<![CDATA[		
			gender=#{gender } 
			where no = #{no }
		
		]]>
	</update>
</mapper>
